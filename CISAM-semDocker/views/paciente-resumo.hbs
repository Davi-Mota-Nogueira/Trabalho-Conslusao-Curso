        <div class="col"><p class="fw-bold">Prontuário</p></div>
        <div class="col"><p class="fw-bold">CPF</p></div>
        <div class="col">
        <form action="/consulta" method="post">
            <input type="hidden" name="cpf" value="{{cpf}}">
            <button class="btn btn-success col-7" style="--bs-btn-padding-x: .25rem;">MARCAR CONSULTA</button>
        </form>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col"><p>{{prontuario}}</p></div>
        <div class="col"><p>{{cpf}}</p></div>
        <div class="col"><button type="button" class="btn btn-outline-ligth col-7" style="--bs-btn-padding-x: .25rem;"></button></div>
    </div>

    <div class="tabEditProfileContainer">
         <div class="containerItem">
            <form action="/editar" method="post">
                <input type="hidden" name="cpf" value="{{cpf}}">
                <button class="tabEditProfile">DADOS CADASTRAIS</button>
            </form>
        </div> 

        <div class="containerItemResume">
            <form action="/paciente-resumo" method="post">
                <input type="hidden" name="cpf" value="{{cpf}}">
                <button class="tabEditProfile activeItemEditProfile">RESUMO</button>
            </form>
        </div>
    </div>
